@page
@model CprModel
@using Microsoft.AspNetCore.Identity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Enter CPR Number</h3>

<p>Welcome, @Model.UserName!</p>
<p>Your roles: @string.Join(", ", Model.Roles)</p>

<form method="post">
    <div class="form-group">
        <label asp-for="CprValue"></label>
        <input asp-for="CprValue" class="form-control" />
        <span asp-validation-for="CprValue" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>